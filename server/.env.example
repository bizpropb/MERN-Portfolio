POSTGRESQL_PORT=5432
POSTGRESQL_USER=admin ### change this when going prod
POSTGRESQL_PASSWORD=password123 ### change this when going prod
POSTGRESQL_DATABASE=portfolio

# JWT
JWT_SECRET=mern-portfolio-super-secret-jwt-key-2025-very-long-and-secure-123456789
JWT_EXPIRE=30d

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000